    except:
      pass

    # Standby:
    # ------------------------------------------------------
    try:
      StandbyNodeNames = ConfigDict['STANDBY']['NODE_NAMES']
    except:
      pass
    if (StandbyNodeNames.find(',') >= 0):
      StandbyNodeNames = ''.join(StandbyNodeNames.split()).split(',')
    else:
       StandbyNodeNames = StandbyNodeNames.split()
